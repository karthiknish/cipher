rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.role == 'admin' ||
        request.auth.token.email == 'karthik.nishanth06@gmail.com'
      );
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    function isValidReviewMedia() {
      return (
        request.resource.contentType.matches('image/.*') ||
        request.resource.contentType.matches('video/.*')
      ) && request.resource.size < 10 * 1024 * 1024; // 10MB max for reviews
    }
    
    // User avatars
    match /avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId) && isValidImage();
    }
    
    // Product images - admin only upload, public read
    match /products/{productId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }
    
    // Review images and videos
    match /reviews/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isValidReviewMedia();
    }
    
    // Bundle images
    match /bundles/{bundleId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }
    
    // Temporary uploads (for virtual try-on, etc)
    match /temp/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) && isValidImage();
      // Note: Set up a Cloud Function to auto-delete after 24 hours
    }
  }
}
